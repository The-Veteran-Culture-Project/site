---
import { marked } from "marked";
import { getCollection } from "astro:content";

import Layout from "@/layouts/Layout.astro";
import content from "@/content/pages/about.json";
import { TeamMemberCard } from "@/components/TeamMemberCard";

const { body } = content;

const members = await getCollection("teamMembers");
---

<Layout title="About - The Veteran Culture Project">
  <main class="min-h-[calc(100vh-9rem)] py-12">
    <div class="container px-4 mx-auto">
      <div class="max-w-4xl mx-auto">
        <div class="text-center space-y-6 mb-12">
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-zinc-100 tracking-tight">
            About Us
          </h1>
        </div>
        <div class="prose prose-lg dark:prose-invert mx-auto mb-16 text-center">
          <div class="space-y-6 text-zinc-300" set:html={marked.parse(body)} />
        </div>
        
        <!-- Team member cards container with responsive centering -->
        <div class="flex justify-center w-full mb-12">
          <div class="flex flex-col sm:flex-row justify-center gap-8 w-full max-w-3xl">
            {members.map((m) => (
              <div class="flex justify-center w-full sm:w-1/2 max-w-md mx-auto">
                <TeamMemberCard {...m.data} client:load />
              </div>
            ))}
          </div>
        </div>
        
        <div class="mt-16 w-full max-w-2xl mx-auto">
          <div id="marketing-signup-container">
            <!-- MarketingSignup component will be rendered here -->
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  import React from 'react';
  import { createRoot } from 'react-dom/client';
  import MarketingSignup from '../components/MarketingSignup';
  
  // Wait for the DOM to be fully loaded
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('marketing-signup-container');
    if (container) {
      const root = createRoot(container);
      root.render(
        React.createElement(MarketingSignup, {
          buttonText: "Stay Connected",
          heading: "Get occasional updates on findings, film progress, and ways to stay engaged.",
          subheading: "",
          className: "w-full"
        })
      );
    }
  });
</script>
