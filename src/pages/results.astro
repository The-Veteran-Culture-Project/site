---
import Layout from "@/layouts/Layout.astro";
import SurveyResultsChart from "@/components/SurveyResultsChart.tsx";
import { StrategyDisplay } from "@/components/StrategyDisplay";
---

<Layout title="Results - The Veteran Culture Project" isLandingPage={false}>
  <div class="container px-4 py-12 mx-auto">
    <div class="max-w-5xl mx-auto space-y-12">
      <div class="text-center">
        <h1 class="text-3xl md:text-4xl font-bold text-zinc-100 mb-4">Your Survey Results</h1>
        <p class="text-xl text-primary">See where you align on the military-civilian cultural matrix</p>
      </div>

      <div class="flex flex-col items-center justify-center min-h-[60vh]">
        <SurveyResultsChart client:load />
      </div>

      <div class="space-y-6">
        <h2 class="text-2xl font-bold text-zinc-100 text-center">Understanding Your Results</h2>
        <StrategyDisplay client:load />
      </div>
    </div>
  </div>
</Layout>
