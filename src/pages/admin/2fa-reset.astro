---
import Layout from "@/layouts/Layout.astro";
import { db, SurveyUser } from "astro:db";
import { eq } from "astro:db";
import { lucia } from "@/lib/auth";

// Check authentication
const sessionId = Astro.cookies.get(lucia.sessionCookieName)?.value ?? null;
if (!sessionId) {
  return Astro.redirect("/admin/login");
}

const { session, user } = await lucia.validateSession(sessionId);
if (!session || !user) {
  return Astro.redirect("/admin/login");
}

// Get full user data
const fullUser = await db.select().from(SurveyUser)
  .where(eq(SurveyUser.id, user.id))
  .get();

if (!fullUser || fullUser.role !== 'admin') {
  return Astro.redirect("/admin/login");
}

let message: string | null = null;

// Handle reset
if (Astro.request.method === "POST") {
  const formData = await Astro.request.formData();
  const action = formData.get("action")?.toString();
  const confirmPassword = formData.get("confirmPassword")?.toString();
  
  if (action === "reset" && confirmPassword) {
    const bcrypt = await import("bcryptjs");
    if (await bcrypt.compare(confirmPassword, fullUser.password)) {
      // Reset 2FA completely
      await db.update(SurveyUser)
        .set({ 
          two_factor_secret: null,
          two_factor_enabled: false 
        })
        .where(eq(SurveyUser.id, user.id));
      
      // Clear any temp cookies
      Astro.cookies.delete('temp_2fa_secret');
      Astro.cookies.delete('temp_login');
      
      message = "2FA has been completely reset. You can now set it up again.";
    } else {
      message = "Invalid password. Reset failed.";
    }
  }
}
---

<Layout title="2FA Emergency Reset" isLandingPage={false}>
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto">
      <h1 class="text-3xl font-bold text-white mb-8">2FA Emergency Reset</h1>
      
      <div class="bg-red-900/20 border border-red-700 rounded-lg p-6 mb-6">
        <h2 class="text-red-400 font-bold mb-2">⚠️ Warning</h2>
        <p class="text-red-300 text-sm">
          This will completely reset your 2FA setup. Use this only if you're locked out or having persistent issues.
        </p>
      </div>

      {message && (
        <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-4 mb-6">
          <p class="text-white">{message}</p>
        </div>
      )}

      <div class="bg-zinc-900 border border-zinc-800 rounded-lg p-6">
        <form method="POST">
          <input type="hidden" name="action" value="reset" />
          
          <div class="mb-4">
            <label for="confirmPassword" class="block text-sm font-medium text-gray-300 mb-2">
              Confirm your password to reset 2FA:
            </label>
            <input
              type="password"
              name="confirmPassword"
              id="confirmPassword"
              class="w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-md text-white focus:border-red-500 focus:ring focus:ring-red-500/50"
              required
            />
          </div>
          
          <button
            type="submit"
            class="w-full py-2 px-4 bg-red-600 hover:bg-red-700 text-white font-medium rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500"
          >
            Reset 2FA Completely
          </button>
        </form>
      </div>

      <div class="mt-6 text-center">
        <a href="/admin/2fa-setup" class="text-indigo-400 hover:text-indigo-300">
          ← Back to 2FA Setup
        </a>
        <span class="text-gray-500 mx-2">|</span>
        <a href="/admin/2fa-debug" class="text-indigo-400 hover:text-indigo-300">
          2FA Debug Tool
        </a>
      </div>
    </div>
  </div>
</Layout>
