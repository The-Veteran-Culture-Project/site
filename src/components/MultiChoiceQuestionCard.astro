---
interface Props {
  question: string;
  choices: Array<string>;
}

const { question, choices } = Astro.props;
---

<div
  class="bg-gray-300 p-4 md:p-8 text-zinc-900 rounded-2xl flex-1 flex-column"
>
  <h2 class="text-2xl md:text-3xl font-bold pb-4 flex-1">{question}</h2>
  <div class="flex-column">
    {
      choices.map((choice) => (
        <div class="flex-1 p-0.5 flex">
          <input
            type="radio"
            id={choice}
            name={question}
            value={choice}
            class="peer/{choice} appearance-none flex"
          />
          <label
            for={choice}
            class="flex-1 peer-checked/{choice}:bg-gradient-to-r from-violet-700 to-purple-500 peer-checked/{choice}:text-slate-100 cursor-pointer p-2 rounded-md"
          >
            {choice}
          </label>
        </div>
      ))
    }
  </div>
</div>
